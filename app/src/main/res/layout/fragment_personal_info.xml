<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context="com.example.zero.fragment.PersonalInfoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#1296db"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="我的"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:clickable="true"
            android:drawableLeft="@drawable/settings"
            android:textColor="@color/white" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--头像、用户名栏-->
            <LinearLayout
                android:id="@+id/user_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1296db"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/user_img"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/personal_img_shape_corner"
                    android:padding="3dp"
                    android:src="@drawable/personal_img" />

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="用户名"
                    android:textColor="@color/white" />

                <ImageView
                    android:id="@+id/user_arrow"
                    style="@style/arrow_right_white"
                    android:layout_marginRight="20dp" />
            </LinearLayout>

            <!--消息等子栏目-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:divider="@drawable/divide_line"
                android:orientation="vertical"
                android:showDividers="middle">

                <LinearLayout
                    android:id="@+id/msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/notice_fill"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:text="我的消息"
                        android:textColor="#000000" />

                    <ImageView
                        style="@style/arrow_right_gray"
                        android:layout_marginRight="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/favor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/favor"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:text="我的收藏"
                        android:textColor="#000000" />

                    <ImageView
                        style="@style/arrow_right_gray"
                        android:layout_marginRight="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/friends"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/friend"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:text="常用联系人"
                        android:textColor="#000000" />

                    <ImageView
                        style="@style/arrow_right_gray"
                        android:layout_marginRight="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/locations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/location"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:text="常用地点"
                        android:textColor="#000000" />

                    <ImageView
                        style="@style/arrow_right_gray"
                        android:layout_marginRight="5dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:divider="@drawable/divide_line"
                android:orientation="vertical"
                android:showDividers="middle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/scan"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:text="扫一扫"
                        android:textColor="#000000" />

                    <ImageView
                        style="@style/arrow_right_gray"
                        android:layout_marginRight="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/help_feedback"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/edit"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:text="帮助与反馈"
                        android:textColor="#000000" />

                    <ImageView
                        style="@style/arrow_right_gray"
                        android:layout_marginRight="5dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
